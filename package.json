{
	"name": "n8n-nodes-perfexcrm-api",
	"version": "0.1.0",
	"description": "n8n node for PerfexCRM API integration with full CRUD operations for Calendar Events, Customers, Items, Leads, Subscriptions, Tasks, and Tickets (requires PerfexCRM API module)",
	"license": "MIT",
	"homepage": "https://github.com/VCalazans/n8n-nodes-perfexcrm-api",
	"keywords": [
		"n8n-community-node-package",
		"perfexcrm",
		"perfexcrm-api",
		"crm",
		"api",
		"calendar",
		"customers",
		"leads",
		"tasks",
		"tickets",
		"subscriptions"
	],
	"author": {
		"name": "Victor Calazans",
		"email": "contact@vcalazans.dev"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/VCalazans/n8n-nodes-perfexcrm-api.git"
	},
	"bugs": {
		"url": "https://github.com/VCalazans/n8n-nodes-perfexcrm-api/issues"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"overrides": {
		"change-case": "4.1.2"
	},
	"scripts": {
		"build": "n8n-node build",
		"build:watch": "tsc --watch",
		"dev": "n8n-node dev",
		"lint": "n8n-node lint",
		"lint:fix": "n8n-node lint --fix",
		"release": "n8n-node release",
		"prepublishOnly": "n8n-node prerelease"
	},
	"files": [
		"dist"
	],
	"n8n": {
		"n8nNodesApiVersion": 1,
		"strict": true,
		"credentials": [
			"dist/credentials/PerfexCrmApi.credentials.js"
		],
		"nodes": [
			"dist/nodes/PerfexCRM/PerfexCrm.node.js"
		]
	},
	"devDependencies": {
		"@n8n/node-cli": "*",
		"eslint": "9.32.0",
		"prettier": "3.6.2",
		"release-it": "^19.0.4",
		"typescript": "5.9.2"
	},
	"peerDependencies": {
		"n8n-workflow": "*"
	}
}
